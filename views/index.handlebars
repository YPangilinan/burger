<div class="container">

<h1>HAPPIBEE BURGER</h1>
<br>

<div class="row">
  <div class="col-lg-6">
<div id='avail'>
    <h2>Burgers Available:</h2>
    
        {{#each burgers}} 
        {{#unless this.devoured}}
        <div class="card">
          <div class="card-header">
            <h4>{{this.burger_name}}</h4>
          </div>
          <div class="card-body">
            <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button class="btn btn-warning" type="submit">Eat Me!</button>
            </form>
          </div>
        </div>
        {{/unless}} 
        {{/each}}
</div>
  </div>
<div class="col-lg-6">
<div id='devoured'>
    <h2>Burgers Tried: </h2>
    
       {{#each burgers}} 
        {{#if this.devoured}}
        <div class="card">
          <div class="card-header">
            <h4>{{this.burger_name}}</h4>
          </div>
          <div class="card-body">
            <form action="/{{this.id}}?_method=DELETE" method="POST">
                <input type="hidden" name="id" value="{{this.id}}">
                <button class="btn btn-warning" type="submit">Remove the evidence!</button>
            </form>
          </div>
        </div>
        {{/if}} 
        {{/each}}
    
</div>
</div>

</div>

<div class="row">
  <div class="col-lg-12 d-flex justify-content-center">
<div id='add'>
    <h2>Add a Burger: </h2>

    <form class="create-update-form" action="/" method="POST">
        <div class="form-group">
            <label for="dab">Burger Name:</label>
            <input type="text" id="dab" name="burger_name">
        </div>
        <button class="btn btn-primary" type="submit">Add Burger</button>
    </form>
</div>
  </div>

</div>

</div>