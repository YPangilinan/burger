<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center" id = "header">
      <div class="col-md-5 p-lg-5 mx-auto my-5">
        <h1 class="display-4 font-weight-normal">Welcome to Happibee</h1>
        <p class="lead font-weight-normal">Home of the famous Yum Yum Burger</p>
        <a class="btn btn-outline-secondary" href="#">Coming soon</a>
      </div>
      <div class="product-device shadow-sm d-none d-md-block"></div>
      <div class="product-device product-device-2 shadow-sm d-none d-md-block"></div>
    </div>

<div class="container">
  <div class="row">
    <h2>Our Current Menu</h2>
  </div>
  <div class="row m-3">
    <div class="col-lg-4">
<div class="card" style="width: 20rem;">
  <img class="card-img-top" src="https://jollibeeusa.com/wp-content/uploads/2018/11/chicksand2.png" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">Chicken Yum Yum</h5>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
  </div>
</div>
    </div>
    <div class="col-lg-4">
      <div class="card" style="width: 20rem;">
  <img class="card-img-top" src="https://www.jollibeeusa.com/wp-content/uploads/2019/03/cheeseburger-1.png" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">Classic Yum Yum with Cheese</h5>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
  </div>
</div>
    </div>
    <div class="col-lg-4">
      <div class="card" style="width: 20rem;">
      <img class="card-img-top" src="https://www.jollibeeusa.com/wp-content/uploads/2019/03/bigyum.png" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">Classic Yum Yum</h5>
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        </div>
      </div>
    </div>
  </div>
<div class="row">
  <div class="col-lg-6">
    <div id='avail'>
      <h2>Burgers Available:</h2>
        {{#each burgers}} 
        {{#unless this.devoured}}
        <div class="card">
          <div class="card-header">
            <h4>{{this.burger_name}}</h4>
          </div>
          <div class="card-body">
            <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button class="btn btn-warning" type="submit">Eat Me!</button>
            </form>
          </div>
        </div>
        {{/unless}} 
        {{/each}}
    </div>
</div>
<div class="col-lg-6">
  <div id='devoured'>
    <h2>Burgers Tried: </h2>
       {{#each burgers}} 
        {{#if this.devoured}}
        <div class="card">
          <div class="card-header">
            <h4>{{this.burger_name}}</h4></div>
          <div class="card-body">
            <form action="/{{this.id}}?_method=DELETE" method="POST">
                <input type="hidden" name="id" value="{{this.id}}">
                <button class="btn btn-warning" type="submit">Remove the evidence!</button>
            </form>
          </div>
        </div>
        {{/if}} 
        {{/each}}
  </div>
</div>
</div>

<div class="row">
  <div class="col-lg-12 d-flex justify-content-center">
    <div id='add'>
      <h2>Add a Burger: </h2>
        <form class="create-update-form" action="/" method="POST">
            <div class="form-group">
            <label for="dab">Burger Name:</label>
            <input type="text" id="dab" name="burger_name"></div>
            <button class="btn btn-primary" type="submit">Add Burger</button>
        </form>
  </div>
</div>
</div>

</div>