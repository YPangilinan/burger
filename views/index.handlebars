<h1>EAT DA BURGER</h1>

<!-- Pass in data from server.js -->
<ul>
  {{#each burgers}}
  	<li>
  	    <p><span class="label">ID:</span> {{this.id}}</p>
      <p><span class="label"></span> {{this.burger_name}}</p>

      <button data-id="{{this.id}}" class="delburger">Devour it</button>
  	</li>
  {{/each}}
</ul>

<h2>Add a Burger</h2>

<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger</label>
    <input type="text" id="auth" name="burger">
  </div>

  <button type="submit">Add Quote</button>
</form>
